    <Grid Background="MintCream">
        <Image Source="Assets/PatientNet_Background.jpg" />
        <!-- Austin's Code for start and stop camera buttons
        <Button Content="Start Camera" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top" Click="StartButton_Click" Width="106"/>
        <Button Content="Stop Camera" HorizontalAlignment="Left" Margin="240,143,0,0" VerticalAlignment="Top" Click="StopButton_Click" RenderTransformOrigin="0.5,0.5" Width="106"/>
        -->
        <CaptureElement Name="PreviewControl" Stretch="Uniform" Margin="10,143,10,0"/>

        <!-- PatientNet Title -->
        <TextBlock 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,30,0,0" 
            IsDoubleTapEnabled="False" 
            IsHoldingEnabled="False" 
            IsRightTapEnabled="False" 
            IsTapEnabled="False" 
            Foreground="SlateGray" 
            FontSize="36" 
            FontFamily="Arial Rounded MT Bold">  
            <Bold> PatientNet </Bold>
        </TextBlock>
  
        <!--
        <Image Source="Assets/PatientNet_Doctor_Pic.png" Width="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="630,0,0,120"/>
