<Page
    x:Class="PatientNet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PatientNet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="MintCream">
        <Image Source="Assets/PatientNet_Background.jpg" />
        <!-- Austin's Code for start and stop camera buttons
        <Button Content="Start Camera" HorizontalAlignment="Left" Margin="10,143,0,0" VerticalAlignment="Top" Click="StartButton_Click" Width="106"/>
        <Button Content="Stop Camera" HorizontalAlignment="Left" Margin="240,143,0,0" VerticalAlignment="Top" Click="StopButton_Click" RenderTransformOrigin="0.5,0.5" Width="106"/>
        -->
        <CaptureElement Name="PreviewControl" Stretch="Uniform" Margin="10,143,10,0"/>

        <!-- PatientNet Title -->
        <TextBlock 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,30,0,0" 
            IsDoubleTapEnabled="False" 
            IsHoldingEnabled="False" 
            IsRightTapEnabled="False" 
            IsTapEnabled="False" 
            Foreground="SlateGray" 
            FontSize="36" 
            FontFamily="Arial Rounded MT Bold">  
            <Bold> PatientNet </Bold>
        </TextBlock>

        <!-- Textbox to enter emergency contact phone number -->
        <TextBox 
            x:Name="Phone" 
            Background="Transparent" 
            Width="150" 
            Header="Enter Phone Number" 
            PlaceholderText="(XXX)XXX-XXXX" 
            InputScope="Number" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Foreground="SlateGray" 
            Margin="-400,150,0,0" 
            MaxLength="13" 
            Height="62"          
            KeyDown="PhoneDownHandler"
            TextChanged="PhoneTextChanged"
            PointerEntered="Phone_PointerEntered"
            PointerExited="Help_PointerExited"/>

        <!-- Textbox to enter EMT's skype name -->
        <TextBox 
            x:Name="SkypeName" 
            Background="Transparent" 
            Width="150" 
            Header="Enter Skype Name" 
            PlaceholderText="e.g. skype.name" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Foreground="SlateGray" 
            Margin="400,150,0,0" 
            Height="62" 
            KeyDown="SkypeNameDownHandler"
            PointerEntered="SkypeName_PointerEntered"
            PointerExited="Help_PointerExited"
        />

        <!-- Textbox for Notifications on Phone Number -->
        <TextBlock 
            x:Name="UserNotifications"
            Width="500"
            TextWrapping="WrapWholeWords"
            FontSize="20px"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            TextAlignment="Center"
            Foreground="Black" 
            Margin="0,150,0,0" 
            Height="70" IsDoubleTapEnabled="False" IsTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" 
        />

        <!-- Textbox for User Help -->
        <Border BorderBrush="{x:Null}" Height="100" Margin="0,0,0,100">
            <TextBlock 
                x:Name="UserHelp"
                Width="150"
                TextWrapping="WrapWholeWords"
                FontSize="12.5px"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Foreground="Black" 
                Margin="352,-70,351.333,70"
                IsDoubleTapEnabled="False"
                IsTapEnabled="False"
                IsHoldingEnabled="False"
                IsRightTapEnabled="False" 
            />
        </Border>

        <!-- Button to notify Emergency Contact -->
        <StackPanel>
            <Button
                x:Name="CallContact"
                Background="Transparent"
                HorizontalAlignment="Center"
                Margin="-400,240,0,0"
                VerticalAlignment="Top"
                Width="220"
                Click="PhoneClick"
                PointerEntered="Phone_PointerEntered"
                PointerExited="Help_PointerExited" >
                <StackPanel>
                    <Border CornerRadius="9" 
                    Background="LightSkyBlue" 
                    Opacity="0.78"
                    BorderBrush="SlateGray" 
                    BorderThickness="1">
                        <TextBlock Text="Notify Emergency Contact" 
                           Margin="10,6.5" 
                           Foreground="Black" FontFamily="Arial Rounded MT Bold"/>
                    </Border>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Button to notify Doctors -->
        <StackPanel>
            <Button
                x:Name="CallDoctors"
                Background="Transparent"
                HorizontalAlignment="Center"
                Margin="400,240,0,0"
                VerticalAlignment="Top"
                Width="160"
                Click="CallDoctorClick"
                PointerEntered="SkypeName_PointerEntered"
                PointerExited="Help_PointerExited">
                <StackPanel>
                    <Border CornerRadius="9" 
                    Background="LightSkyBlue" 
                    Opacity="0.78"
                    BorderBrush="SlateGray" 
                    BorderThickness="1">
                        <TextBlock Text="Notify All Doctors" 
                           Margin="10,6.5" 
                           Foreground="Black" FontFamily="Arial Rounded MT Bold"/>
                    </Border>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
