<Page
    x:Class="PatientNet.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PatientNet"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="MintCream">
        <Image Source="Assets/PatientNet_Background.jpg" />

        <!-- PatientNet Title -->
        <TextBlock 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Margin="0,30,0,0" 
            IsDoubleTapEnabled="False" 
            IsHoldingEnabled="False" 
            IsRightTapEnabled="False" 
            IsTapEnabled="False" 
            Foreground="SlateGray" 
            FontSize="36" 
            FontFamily="Arial Rounded MT Bold">  
            <Bold> PatientNet </Bold>
        </TextBlock>

        <!-- Button to Display User Help -->
        <ToggleButton x:Name="HelpButton"
             Grid.Column="1"
             Width="40"
             Height="30"
             Background="Transparent"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             Margin="750,0,0,400"
             Click="HelpButtonClicked">
             <ToggleButton.Content>
                <Image Source="Assets/Help_Icon.png" Width="20"/>
             </ToggleButton.Content>
        </ToggleButton>
        
        <TextBlock x:Name="StepOne"
            Width="45"
            Height="25"
            Visibility="Collapsed"
            Text="Step 1"
            Margin="0,0,510,220"/>
        
        <TextBlock x:Name="StepTwo"
            Width="45"
            Height="25"
            Visibility="Collapsed"
            Text="Step 2"
            Margin="0,0,0,220"/>
            
        <TextBlock x:Name="StepThree"
            Width="45"
            Height="25"
            Visibility="Collapsed"
            Text="Step 3"
            Margin="545,0,0,220"/>

        <!-- Textbox to enter EMT's skype name -->
        <RelativePanel Width="230" Height="63" Margin="-560,0,0,90">
            <Image Source="Assets/PatientNet_Doctor_Pic.png" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
            <AutoSuggestBox
                x:Name="SkypeName" 
                Background="Transparent" 
                Width="150" 
                Header="Enter Skype Name" 
                PlaceholderText="e.g. skype.name" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Foreground="SlateGray" 
                Margin="70,0,0,0" 
                Height="62" 
                KeyDown="Skype_KeyDownHandler"
                PointerEntered="SkypeName_PointerEntered"
                PointerExited="SkypeName_PointerExited"
                GotFocus="SkypeName_GotFocus"
                LostFocus="SkypeName_LostFocus"
                TextChanged="SkypeName_TextChanged"/>
        </RelativePanel>

        <!-- Textbox to enter emergency contact phone number -->
        <RelativePanel Width="280" Height="63" Margin="0,0,0,90">
            <Image Source="Assets/PatientNet_Phone_Pic.png" Width="60" Height="60" Margin="0,0,0,0"/>
            <TextBox 
                x:Name="Phone"
                Background="Transparent"
                Width="200"
                Header="Enter Phone"
                PlaceholderText="(XXX)XXX-XXXX"
                MaxLength="13"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="SlateGray"
                Margin="70,0,0,0"
                Height="60"
                IsEnabled="True"
                KeyDown="Phone_KeyDownHandler"
                TextChanged="Phone_TextChanged"
                PointerEntered="Contact_PointerEntered"
                PointerExited="Contact_PointerExited"
                GotFocus="Contact_GotFocus"
                LostFocus="Contact_LostFocus"/>
        </RelativePanel>
        
        <!-- Textbox to enter emergency contact email address -->
        <RelativePanel Width="280" Height="63" Margin="0,80,0,0">
            <Image Source="Assets/PatientNet_Email_Pic.png" Width="60" Height="60" Margin="0,0,0,0"/>
            <TextBox 
                x:Name="Email"
                Background="Transparent"
                Width="200"
                Header="Enter Email"
                PlaceholderText="contact@example.com"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Foreground="SlateGray"
                Margin="70,0,0,0"
                Height="60"
                IsEnabled="True"
                KeyDown="Email_KeyDownHandler"
                PointerEntered="Contact_PointerEntered"
                PointerExited="Contact_PointerExited"
                GotFocus="Contact_GotFocus"
                LostFocus="Contact_LostFocus"/>
        </RelativePanel>

        <!-- Textbox for Notifications for Button -->
        <TextBlock 
            x:Name="UserNotifications"
            Width="200"
            TextWrapping="WrapWholeWords"
            FontSize="20px"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            TextAlignment="Center"
            Foreground="Black" 
            Margin="555,275,0,0" 
            Height="170" 
            IsDoubleTapEnabled="False" 
            IsTapEnabled="False" 
            IsHoldingEnabled="False" 
            IsRightTapEnabled="False"/>

        <!-- Textbox for User Help for entering Skype Name-->
        <TextBlock 
            x:Name="UserHelpSkype"
            Width="150"
            Height="180"
            TextWrapping="WrapWholeWords"
            Visibility="Collapsed"
            FontSize="14px"
            HorizontalAlignment="Center"
            TextAlignment="Center"
            Text="Please enter the Skype Name associated with this Hololens."
            Foreground="Black" 
            Margin="87,286,616,31"
            IsDoubleTapEnabled="False"
            IsTapEnabled="False"
            IsHoldingEnabled="False"
            IsRightTapEnabled="False"/>

        <!-- Textbox for User Help for entering Phone Number / Email -->
        <TextBlock 
            x:Name="UserHelpContact"
            Width="200"
            Height="140"
            TextWrapping="WrapWholeWords"
            Visibility="Collapsed"
            FontSize="14px"
            HorizontalAlignment="Center"
            TextAlignment="Center"
            Text="Please enter either the emergency contact's phone number or email address (or both). A text or email to the specified number containing a link to the emergency contact PatientNet portal."
            Foreground="Black" 
            Margin="0,300,0,0"
            IsDoubleTapEnabled="False"
            IsTapEnabled="False"
            IsHoldingEnabled="False"
            IsRightTapEnabled="False"/>

        <!-- Button to notify Doctors -->
        <StackPanel>
            <Button
                x:Name="RequestDoctors"
                Background="Transparent"
                HorizontalAlignment="Center"
                Margin="550,180,0,0"
                VerticalAlignment="Top"
                Width="150"
                Click="RequestDoctors_Click">
                <StackPanel>
                    <Border Margin="-4.7"
                    CornerRadius="9" 
                    Background="LightSkyBlue" 
                    Opacity="0.78"
                    BorderBrush="SlateGray" 
                    BorderThickness="1">
                        <TextBlock Text="Request Doctors" 
                            Margin="10,6.5" 
                            Foreground="Black" FontFamily="Arial Rounded MT Bold"/>
                    </Border>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
