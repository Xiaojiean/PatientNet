        <!-- Textbox to enter emergency contact phone number -->
        <!-- InputScope="TelephoneNumber" -->
        <TextBox 
            x:Name="Phone"
            Background="Transparent"
            Width="200"
            Header="Enter Phone"
            PlaceholderText="(XXX)XXX-XXXX"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Foreground="SlateGray"
            Margin="0,150,0,0"
            Height="60"
            IsEnabled="False"
            KeyDown="PhoneDownHandler"
            TextChanged="PhoneTextChanged"
            PointerEntered="Phone_PointerEntered"
            PointerExited="Help_PointerExited"/>

        <TextBox 
            x:Name="Email"
            Background="Transparent"
            Width="200"
            Header="Enter Email"
            PlaceholderText="contact@example.com"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Foreground="SlateGray"
            Margin="0,225,0,0"
            Height="60"
            IsEnabled="False"
            KeyDown="PhoneDownHandler"
            TextChanged="PhoneTextChanged"
            PointerEntered="Phone_PointerEntered"
            PointerExited="Help_PointerExited"/>

        <!-- Textbox to enter EMT's skype name -->
        <TextBox 
            x:Name="SkypeName" 
            Background="Transparent" 
            Width="150" 
            Header="Enter Skype Name" 
            PlaceholderText="e.g. skype.name" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            Foreground="SlateGray" 
            Margin="-500,150,0,0" 
            Height="62" 
            KeyDown="SkypeNameDownHandler"
            PointerEntered="SkypeName_PointerEntered"
            PointerExited="Help_PointerExited"
        />

